<h2><%= t(".sign_up") %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= f.error_notification %>

  <% if f.error_notification %>
    <div id="error_explanation">
      <h2>Hubo errores:</h2>
      <ul>
        <% resource.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, required: true, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, required: true %>
    </div>
    <div class="field"> 
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, required: true %>
    </div>
    <div class="field">
      <%= f.check_box :agreed_to_terms %> Acepto los <%= link_to 'terminos y condiciones', legal_path, target: '_blank' %>
    </div>  
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".sign_up") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
