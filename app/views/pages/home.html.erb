  <div class="selector-wrapper">
    <center><h1>Compra <span>Bitcoin</span></h1></center>
    
    <div class="selector">
      
      <input type="hidden" value="<%= @btc_prices.to_json %>">

      <div class="packs">
        <% @packs.take(5).each do |amount| %>
          <% next if get_price(amount)*amount > @first_max.to_f %>
          <div
             id="<%= "pack-#{amount}-#{get_price(amount)}" %>" 
             class="pack" 
             data-amount="<%= amount %>" 
             data-price="<%= get_price(amount) %>">

            <div class="head"><%= amount %> bitcoin</div>
            <div class="content">
              <span class="price">
                <%= number_to_currency get_price(amount)*amount, separator: '.', precision: 0 %>
              </span>
              <button class="buy-now">Comprar</button>
            </div>
          </div>
        <% end %>
      </div>

      <!--<div class="slider">
        <input type="range" step="0.01">
      </div>-->

      <div class="exchange">
        <p>Compra una cantidad especifica:</p>
        <div class="inputs">
          <div class="bitcoin">
            <span>Bitcoin</span>
            <input type="text" name="bitcoin">
          </div>
          <div class="peso">
            <input type="text" name="peso">
            <span>Pesos</span>
          </div>
        </div>
        <p><button class="buy-right-now">Comprar!</button></p>
      </div>

    </div>
  </div>

  <div class="container">
    <div class="mentions">
      <div class="grid grid--gutters">
        <div class="grid-cell block">
          <a href="https://blockchain.info/"><span></span></a>
        </div>
        <div class="grid-cell cript">
          <a href="http://www.diariobitcoin.com/"><span></span></a>
        </div>
        <div class="grid-cell coindesk">
          <a href="http://www.coindesk.com/"><span></span></a>
        </div>
        <div class="grid-cell diario">
          <a href="https://criptonoticias.com/"><span></span></a>
        </div>
      </div>
    </div>
  </div>

  <div class="info">
    <div class="container">
      <center class="description">
        <h2>BitAztec</h2>
        <p>La manera más sencilla de de adquirir Bitcoins en México.</p>
      </center>

      <div class="features">
        <div class="grid grid--gutters grid--full large-grid--fit">
          <div class="grid-cell feature">
            <%= image_tag 'fast.png' %>
            <h3>Rápido</h3>
            <p>Reciba sus Bitcoins minutos después de hacer el pago.</p>
          </div>
          <div class="grid-cell feature">
            <%= image_tag 'secure.png' %>
            <h3>Seguro</h3>
            <p>Compre mediante depósito en efectivo o transferencia bancaria.</p>
          </div>
          <div class="grid-cell feature">
            <%= image_tag 'anon.png' %>
            <h3>Anónimo</h3>
            <p>Únicamente se requiere un correo electrónico.</p>
          </div>
        </div>
      </div>

      <div class="call-to-action">
        <%= link_to '¿Cómo funciona?', howto_path %>
      </div>
    </div>
  </div>

</div>
