<!DOCTYPE html>
<html>
  <head>

    <!-- Devise titles -->
    <% if controller_name == 'registrations' %>
      <% title 'Registro' %>
    <% elsif controller_name == 'sessions' %>
      <% title 'Inicia sesión' %>
    <% elsif controller_name == 'passwords' %>
      <% title 'Contraseña' %>
    <% elsif controller_name == 'confirmations' %>
      <% title 'Confirmación' %>
    <% end %>

    <title>
      <%= if content_for?(:title) then yield(:title) + ' | ' end %>
      BitAztec
    </title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application', async: Rails.env.production? %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">

  </head>

  <body>

    <%= render 'shared/nav' %>
    <%= render 'shared/flash' %>

    <main>
      <% if controller_name.in? ['sessions', 'registrations', 'passwords', 'confirmations'] %>
        <div class="devise">
      <% end %>

          <%= yield %>

      <% if controller_name.in? ['sessions', 'registrations', 'passwords', 'confirmations'] %>
        </div>
      <% end %>
    </main>

    <%= render 'shared/footer' %>

    <% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-31527523-13', 'auto');
        ga('send', 'pageview');

      </script>
    <% end %>
  </body>
</html>
