<div class="container pending-buy">
  
  <h2>Mi cuenta</h2>
  <hr>
  
  <p>Miembro desde hace <%= time_ago_in_words current_user.created_at %></p>
  <p>
    Pedidos creados: <%= current_user.orders.count %> &middot;
    Transacciones completadas: <%= current_user.orders.where(completed: true).count %>
  </p>
  
  <table class="">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Cantidad</th>
        <th>Precio</th>
        <th>Estado</th>
        <th>MÃ©todo de pago</th>
        <th>Se expira el</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= formatted_date(order.created_at) %></td>
          <td><%= order.amount %></td>
          <td><%= order.price %></td>
          <td><%= order.status %></td>
          <td><%= order.payment_method.name %></td>
          <td><%= formatted_date(order.expires_at) %></td>
          <td>
            <center>
              <%= link_to 'Ficha', order_path(order), class: 'ui small button' %>
            </center>
          </td>
          <td><%= render 'admin/orders/message_count', order: order %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

