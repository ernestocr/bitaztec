<div class="ui fixed menu">
  <div class="ui container">
    <%= link_to 'BitAztec', root_path, class: 'header item' %>

    <%= link_to 'Mi cuenta', orders_path, class: 'item' %>
    <%= link_to 'Comprar', new_order_path, class: 'item' %>
    <%= link_to 'Como funciona', howto_path, class: 'item' %>
    <%= link_to 'FAQ', faq_path, class: 'item' %>
    <%= link_to 'Acuerdo Legal', legal_path, class: 'item' %>
    <%= link_to 'Contacto', contact_path, class: 'item' %>    

    <div class="right menu">
      <% if user_signed_in? and current_user.admin? %>
        <%= link_to 'Admin', admin_path, class: 'item' %>
