        <%= link_to 'Salir', destroy_user_session_path, method: :delete, class: 'item' %>
      <% else %>
        <%= link_to 'Entrar', new_user_session_path, class: 'item' %>
        <%= link_to 'Registrar', new_user_registration_path, class: 'item' %>
      <% end %>
    </div>
  </div>
</div>

