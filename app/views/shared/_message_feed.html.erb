<% @order.messages.each do |msg| %>
  <div class="media">
    <img class="d-flex mr-3" src="...">
    <div class="media-body">
      <% if current_user == msg.user %>
        TÃº
      <% else %>
        <%= msg.user.email %>
      <% end %>
      <span class="small text-muted">Hace <%= time_ago_in_words msg.created_at %></span>
      <br>
      <%= msg.body %>
    </div>
  </div>
  <br>
  
<% end %>

<hr>

<%= form_for(@order.messages.new, html: { class: 'ui reply form' }) do |f| %>
  <%= f.hidden_field :order_id %>
  <div class="form-group">
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <button class="btn btn-primary btn-sm">
    <i class="fa fa-send"></i> Enviar  
  </button>
<% end %>

  
