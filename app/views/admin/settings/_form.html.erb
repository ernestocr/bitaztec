<%= simple_form_for([:admin, setting], 
                    html: { class: 'form' }, 
                    defaults: { wrapper_html: { class: 'field' } }) do |f| %>
  
  <div class="form-group"> 
    <%= f.input :key, autofocus: true, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group"> 
    <%= f.input :value, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group"> 
    <%= f.submit 'Guardar', class: 'btn btn-success' %>
  </div>
<% end %>
