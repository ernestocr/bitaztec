<h2>Todos los métodos de pago</h2>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Método</th>
      <th>Instrucciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_methods.each do |payment_method| %>
      <tr>
        <td><%= link_to payment_method.name, admin_payment_method_path(payment_method) %></td>
        <td><%= payment_method.method %></td>
        <td><%= payment_method.instructions %></td>
        <td>
          <%= 
            render 'admin/shared/status_toggle', 
              object: payment_method, 
              path: toggle_admin_payment_methods_path(payment_method) %>
        </td>
        <td><%= link_to 'Editar', edit_admin_payment_method_path(payment_method) %></td>
        <td><%= link_to 'Borrar', 
                  admin_payment_method_path(payment_method), 
                  method: :delete, data: { confirm: 'Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Método de pago nuevo', new_admin_payment_method_path, class: 'ui button' %>
