<% title 'Cuentas' %>

<p class="page"><i class="fa fa-bank"></i> Bancos</p>

<nav class="breadcrumb">
  <a href="<%= admin_banks_path %>" class="breadcrumb-item">
    <i class="fa fa-angle-left"></i> bancos
  </a>
  <a href="<%= admin_bank_accounts_path(@bank) %>" class="breadcrumb-item"><b><%= @bank.name %></b></a>
  <span class="breadcrumb-item active">Editar cuenta</span>
</nav>

<div class="row justify-content-lg-center">
  <div class="col-lg-6">
    <%= render 'form', account: @account %>

    <%= render 'delete', account: @account %>
  </div>

  <div class="col-lg-6">
    <p>Tarjetas asociadas</p>
    <hr />

    <div class="cards">
      <%= render 'admin/accounts/cards' %>
    </div>
  </div>
</div>
