<p>
  <i class="fa fa-bank"></i> Bancos
  <a href="<%= new_admin_bank_path %>" class="nav-link float-right no-mg">
    <i class="fa fa-plus"></i> Banco nuevo
  </a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Status</th>
      <th># Cuentas</th>
      <th></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= link_to bank.name, admin_bank_accounts_path(bank) %></td>
        <td>
          <%= 
            render 'admin/shared/status_toggle', 
              object: bank, 
              path: toggle_admin_banks_path(bank) %>
        </td>
        <td><%= bank.accounts.count %></td>
        <td>
          <%= image_tag bank.image.thumb %>
        </td>
        <td>
          <%= link_to 'Editar', edit_admin_bank_path(bank) %>
          | <%= link_to 'Borrar', 
                    admin_bank_path(bank), 
                    method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
