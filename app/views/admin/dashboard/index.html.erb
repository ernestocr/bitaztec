<% title 'Inicio' %>

<p><i class="fa fa-tachometer"></i> Dashboard</p>

<div class="dashboard">
  <div class="row">
    <div class="col-sm-6">
      <p><b><i class="fa fa-folder-o text-danger"></i> Pendientes</b></p>
      <%= render 'admin/dashboard/orders', orders: @pending_orders %>
    </div>
    <div class="col-sm-6">
      <p><b><i class="fa fa-folder-o text-primary"></i> Nuevos</b></p>
      <%= render 'admin/dashboard/orders', orders: @new_orders %>
    </div>
  </div>
  <hr>
  
  <div class="row">
    <div class="col-sm-3">
      <p><i class="fa fa-btc"></i> Precio actual</p>
      <p class="badge badge-primary"><%= number_to_currency Setting.price, separator: '.' %></p>
    </div>
    <div class="col-sm-8 offset-sm-1">
      <p><i class="fa fa-comment"></i> Mensajes nuevos</p>
      <% if @messages.count == 0 %>
        <p class="alert alert-info">No hay mensajes nuevos.</p>
      <% end %>
      <% @messages.reverse.group_by(&:user_id).each do |id, msgs| %>
        <% msg = msgs.first %>
        <a href="<%= admin_order_path(msg.order) %>">
          <div class="media">
            <%= image_tag msg.user.gravatar_url(size: 20, default: 'mm'), class: 'd-flex mr-3' %>
            <div class="media-body">
              <% if current_user == msg.user %>
                TÃº
              <% else %>
                <%= msg.user.email %>
              <% end %>
              <span class="small text-muted">Hace <%= time_ago_in_words msg.created_at %></span>
              <br>
              <%= msg.body %>
            </div>
          </div>
        </a>
        <hr>
      <% end %>
    </div>
  </div>
</div>

