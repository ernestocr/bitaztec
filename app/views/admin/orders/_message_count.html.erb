<center>
  <% if current_user.admin? %>
    <a href="<%= admin_order_path(order) %>">
      <% if order.new_message_for_admin? %>
        <div class="badge badge-danger">
      <% else %>
        <div class="badge badge-default">
      <% end %>
          <i class="fa fa-comments"></i> <%= order.messages.count %>
        </div>
    </a>
  <% else %>
    <a href="<%= order_path(order) %>">
      <% if order.new_message_for_user? %>
        <div class="badge badge-danger">
      <% else %>
        <div class="badge badge-default">
      <% end %>
          <i class="fa fa-comments"></i> <%= order.messages.count %>
        </div>
    </a>
  <% end %>
</center>
